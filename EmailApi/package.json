{
	"name": "EmailApi",
	"version": "1.0.0",
	"description": "My API Description",
	"author": "Andrei Vasile",
	"main": "app.js",
	"keywords": [
		"restify",
		"template",
		"boilerplate"
	],
	"jest": {
		"testEnvironment": "node",
		"verbose": true,
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": -10
			}
		},
		"testPathIgnorePatterns": [
			"<rootDir>/node_modules/"
		]
	},
	"jscpd": {
		"threshold": 0.1,
		"reporters": ["html", "console", "badge"],
		"ignore": ["node_modules"],
		"absolute": true,
		"gitignore": true
	},
	"scripts": {
		"start": "node app.js",
		"precommit": "jest --coverage && echo \"Completed Unt Testing. Commit is ready\"",
		"test": "node_modules/.bin/mocha"
	},
	"devDependencies": {
		"axios": "^0.18.0",
		"chai": "^4.2.0",
		"codecov": "^3.1.0",
		"eslint": "^5.9.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-plugin-import": "^2.14.0",
		"jest": "^23.6.0",
		"mocha": "^5.2.0",
		"nock": "^10.0.2",
		"pre-commit": "^1.2.2"
	},
	"dependencies": {
		"bunyan": "^1.8.12",
		"nodemailer": "^6.4.16",
		"restify": "^6.3.4",
		"restify-router": "^0.5.0",
		"simple-node-logger": "^0.93.40"
	},
	"pre-commit": [
		"precommit"
	]
}
